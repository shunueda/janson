{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext", "esnext.decorators"],
    "experimentalDecorators": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "janson": ["src/index.ts"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
